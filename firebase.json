{
  "hosting": {
    "public": "app",
    "ignore": [
      "firebase.json",
      "**/.*",
      "**/node_modules/**"
    ],
    "rewrites": [
      {
        "source": "/sync-diagram",
        "function": {
          "functionId": "sync_diagram"
        }
      },
      {
        "source": "/create-share",
        "function": {
          "functionId": "create_share"
        }
      },
      {
        "source": "/get-shared-item",
        "function": {
          "functionId": "get_shared_item"
        }
      },
      {
        "source": "/authenticate",
        "function": {
          "functionId": "authenticate"
        }
      },
      {
        "source": "/track",
        "function": {
          "functionId": "track"
        }
      },
      {
        "source": "/info",
        "function": {
          "functionId": "info"
        }
      }
    ]
  },
  "firestore": {
    "rules": "firestore.rules",
    "indexes": "firestore.indexes.json"
  },
  "emulators": {
    "functions": {
      "port": 5002
    },
    "firestore": {
      "port": 8080
    },
    "hosting": {
      "port": 5000
    },
    "ui": {
      "enabled": true,
      "port": 4000
    }
  },
  "functions": [
    {
      "source": "functions",
      "codebase": "default",
      "ignore": [
        "node_modules",
        ".git",
        "firebase-debug.log",
        "firebase-debug.*.log",
        "*.local"
      ]
    }
  ]
}
