{
  "hosting": {
    "public": "app",
    "ignore": [
      "firebase.json",
      "**/.*",
      "**/node_modules/**"
    ],
    "rewrites": [
      {
        "source": "/sync-diagram",
        "function": {
          "functionId": "sync_diagram"
        }
      },
      {
        "source": "/authenticate",
        "function": {
          "functionId": "authenticate"
        }
      },
      {
        "source": "/track",
        "function": {
          "functionId": "track"
        }
      }
    ]
  },
  "firestore": {
    "rules": "firestore.rules",
    "indexes": "firestore.indexes.json"
  }
}